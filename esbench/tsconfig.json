{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"rootDir": ".",
		"outDir": "dist",
		"strict": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"incremental": false,
		"isolatedModules": true,
		"allowJs": true,
		"module": "es2022",
		"moduleResolution": "bundler",
		"noUncheckedIndexedAccess": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"target": "es2022",
		"types": ["node"]
	},
	"exclude": ["node_modules", "dist"]
}
